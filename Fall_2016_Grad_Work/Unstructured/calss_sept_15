insert overwrite table bwNgram2 select split(twowords, '\u0003')[0] as word1, split(twowords, '\u0003')[1] as word2, twocount from (select split(line, '\u0002')[0] as twowords, split(line, '\u0002')[1] as twocount from ng2) tc;